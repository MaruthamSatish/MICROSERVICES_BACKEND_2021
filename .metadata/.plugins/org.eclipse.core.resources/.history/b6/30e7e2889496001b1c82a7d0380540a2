package com.easytobuy;

import java.time.ZoneId;
import java.time.ZonedDateTime;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;

/**
 * @author Satish Reddy
 *
 */
public class ProductAPIExceptionHandler {

	public ResponseEntity<Object> productAPIExceptionHandler(ProductAPIException apiException){
		HttpStatus httpStatus=HttpStatus.BAD_REQUEST;
		new ProductException(apiException.getMessage(), apiException, HttpStatus.BAD_REQUEST, ZonedDateTime.now(ZoneId.of("Z")));
		return new ResponseEntity<>(apiException,HttpStatus.BAD_REQUEST);
		
	}
}
